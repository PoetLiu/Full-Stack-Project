<%- include('./partials/header.ejs') -%>

  <body>
    <%- include('./partials/navbar.ejs') -%>
      <h2 class="title">Sign Up</h2>

      <%- include('./partials/message.ejs') -%>
        <form id="signup" class="shadow p-3 mb-5 bg-body rounded form" action="/signup" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="username" class="form-control" id="username" name="username" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <div class="mb-3">
            <label for="cfm-password" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="cfm-password" name="confirmPassword" required>
          </div>
          <div class="mb-3">
            <label for="usertype" class="form-label">User Type</label>
            <select class="form-select" id="usertype" name="userType">
              <option value="Driver" selected>Driver</option>
              <option value="Examiner">Examiner</option>
              <option value="Admin">Admin</option>
            </select>
          </div>

          <div class="text-center">
            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
        <%- include('./partials/footer.ejs') -%>
  </body>

  </html>